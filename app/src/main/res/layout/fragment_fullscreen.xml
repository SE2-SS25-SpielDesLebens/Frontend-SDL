<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_mainactivity"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Verbinden -->

    <!-- Spielzug senden -->

    <Button
        android:id="@+id/connectbtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/rounded_blue_button"
        android:gravity="center"
        android:text="ðŸ”Œ Verbinden"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/hellobtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ðŸŽ² Spielzug senden"
        android:textSize="20sp"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/connectbtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_blue_button"
        android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/jsonbtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ðŸ’¬ Chat senden"
                app:layout_constraintTop_toBottomOf="@+id/hellobtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp" />

            <Button
                android:id="@+id/jobRequestBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ðŸ“¥ Job anfordern"
                app:layout_constraintTop_toBottomOf="@+id/jsonbtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp" />

            <Button
                android:id="@+id/jobReleaseBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ðŸ“¤ Job freigeben"
                app:layout_constraintTop_toBottomOf="@+id/jobRequestBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp" />


    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="132dp"
        android:text="Status: Getrennt"
        android:textColor="#444"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jsonbtn" />

    <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/messageList"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="Liste der Nachrichten"
                app:layout_constraintTop_toBottomOf="@+id/statusText"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@android:layout/simple_list_item_1" />
    <!-- Statusanzeige mit Hintergrund -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Getrennt"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/status_background"
        android:textAlignment="center"
        android:gravity="center"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/hellobtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
